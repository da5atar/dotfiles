# Auto detect text files and normalize line endings
* text=auto

# Explicitly set text files
*.txt text
*.md text
*.json text
*.yaml text
*.yml text
*.toml text
*.xml text

# Source code
*.js text eol=lf
*.jsx text eol=lf
*.ts text eol=lf
*.tsx text eol=lf
*.py text eol=lf
*.sh text eol=lf
*.bash text eol=lf
*.go text eol=lf
*.rs text eol=lf
*.c text eol=lf
*.cpp text eol=lf
*.h text eol=lf
*.hpp text eol=lf
*.java text eol=lf
*.kt text eol=lf
*.rb text eol=lf
*.php text eol=lf

# Config files
*.conf text eol=lf
*.config text eol=lf
Dockerfile text eol=lf
Makefile text eol=lf
*.mk text eol=lf

# Documentation
*.html text eol=lf
*.css text eol=lf
*.scss text eol=lf
*.sass text eol=lf

# Binary files
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.pdf binary
*.zip binary
*.tar.gz binary
*.tgz binary
*.wasm binary
*.so binary
*.dylib binary
*.dll binary
*.exe binary

# Git LFS tracking (if using)
*.psd filter=lfs diff=lfs merge=lfs -text
*.ai filter=lfs diff=lfs merge=lfs -text

# Diff strategies
*.lockb binary
package-lock.json binary
yarn.lock binary merge=union
Cargo.lock binary merge=union
Gemfile.lock binary merge=union
poetry.lock binary merge=union
