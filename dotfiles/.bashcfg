#!/usr/bin/env bash

if [ -d ~/.bash_it ]; then
    # write the content of bashrc to .bashrc
    echo "bash_it found"
    cat "$PROJECT_ROOT"/templates/bash_it.sh >~/.bashrc
    echo "bash_it config written to .bashrc"
else
    echo "bash_it.sh not found"
    cat "$PROJECT_ROOT"/templates/bashrc >~/.bashrc
fi

(cd "$PROJECT_ROOT" && git add .) >/dev/null

echo "====="
echo "Done"

reload
